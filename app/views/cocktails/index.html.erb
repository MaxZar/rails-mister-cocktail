<%= render 'shared/banner' %>

<h1 id="cocktail-list"></h1>
<div class="card-container">
  <% @cocktails.each do |c| %>
     <%= link_to cocktail_path(c) do %>
      <div class="card">
        <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= c.photo.blank? ? 'https://images.unsplash.com/photo-1482349212652-744925892164?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=9b719ce0351a8dd27a1ecc9f18d9210f&auto=format&fit=crop&w=2600&q=80' : cl_image_path(c.photo, height: 300, width: 400, crop: :fill) %>')"></div>
        <div class="card-description">
          <div class="card-name"><%= c.name %></div>
          <div class="card-icon"><i class="fas fa-thumbs-up"></i></div>
          <div class="card-pop"><%= c.popularity %></div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
